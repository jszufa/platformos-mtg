{% liquid
  graphql cards = 'card/search'
  graphql uploaded_images = 'image/search'
%}


<h1 class="text-4xl bg-indigo-900 text-white w-full p-16">Welcome to MTG World!</h1>

<section class="deck-building my-14">
    <!-- form for adding new card -->
    <form action="/card/create" method="post">
        
        <h2>Build your deck</h2>
        <div class="container">
            
            <table>
                <tr>
                    <td>
                        <label for="name">Card's name:</label>
                        <input type="text" name="name" id="name">
                    </td>
                    <td>
                        <label for="colors">Card's colors:</label>
                        <input type="text" name="colors" id="colors">
                    </td>
                    <td>
                        <label for="types">Card's types:</label>
                        <input type="text" name="types" id="types">
                    </td>
                </tr>
            </table>
            <button type="submit">Add card</button>
        </div>
    </form>

    <table class="deck border-sky-500 border">
        <tr>
            <th>Card's name</th>
            <th>Colors</th>
            <th>Types</th>
            <th>Remove</th>
        </tr>
        {% for card in cards.records.results %}
            <tr>
                <td>{{ card.name }}</td>
                <td>{{ card.colors }}</td>
                <td>{{ card.types }}</td>
                <td>
                    <form action="/card/delete" method="post">
                        <input type="hidden" name="id" value="{{ card.id }}">
                        <button class="delete-btn" type="submit">X</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
</section>

{% graphql data %}
  mutation presign {
    property_upload_presigned_url(table: "images", property_name: "image") {
      upload_url
      upload_url_payload
    }
  }
{% endgraphql %}

<!-- form for adding new image -->
<form id="uploadForm" action="{{ data.property_upload_presigned_url.upload_url }}" enctype="multipart/form-data" method="post">
  {% for field in data.property_upload_presigned_url.upload_url_payload %}
    <input type="hidden" name="{{ field[0] }}" value='{{ field[1] }}'>
  {% endfor %}
  <input id="file" name="file" type="file"/>
  <button type="button" onclick="uploadFile()">Upload Image</button>
</form>

<!-- list of photos -->
<ul>
	{% for record in uploaded_images.records.results %}
		<li>
            <a href="{{ record.image.url }}">
                <img src="{{ record.image.url }}" alt="" width="200px">
            </a>
		  {% comment %} <form action="/item/delete" method="post">
		  	<input type="hidden" name="id" value="{{ item.id }}">
			<button type="submit">Mark as done</button>
		  </form> {% endcomment %}
		</li>
	  {% endfor %}
	<li>
</ul>